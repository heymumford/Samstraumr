#!/bin/bash
# Samstraumr Configuration

# Project paths
S8R_CORE_MODULE="${PROJECT_ROOT}/modules/samstraumr-core"
S8R_JAVA_MAIN="${S8R_CORE_MODULE}/src/main/java"
S8R_JAVA_TEST="${S8R_CORE_MODULE}/src/test/java"
S8R_RESOURCES="${S8R_CORE_MODULE}/src/main/resources"
S8R_TEST_RESOURCES="${S8R_CORE_MODULE}/src/test/resources"

# Report paths
S8R_REPORTS="${PROJECT_ROOT}/target/reports"
S8R_JACOCO_REPORT="${S8R_REPORTS}/jacoco"
S8R_SPOTBUGS_REPORT="${S8R_REPORTS}/spotbugs"
S8R_CHECKSTYLE_REPORT="${S8R_REPORTS}/checkstyle"

# Build settings
S8R_MEMORY_OPTS="-Xmx1g -XX:+HeapDumpOnOutOfMemoryError"
S8R_DEFAULT_PROFILE="atl-tests"

# Testing settings
S8R_TEST_TAGS="@atl"
S8R_TEST_OUTPUT_DIR="${PROJECT_ROOT}/test-results"

# Script settings
S8R_SCRIPT_TIMEOUT=1800  # 30 minutes in seconds