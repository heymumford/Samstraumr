# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to be normalized
*.java text eol=crlf
*.md text eol=crlf
*.xml text eol=crlf
*.feature text eol=crlf
*.properties text eol=crlf
*.html text eol=crlf
*.css text eol=crlf
*.js text eol=crlf
*.json text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.txt text eol=crlf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.jar binary
*.class binary
*.war binary
*.ear binary
*.pdf binary

# Java specific settings
# Prevent Java files from being treated as binary
*.class binary
*.jar binary
*.war binary
*.ear binary

# Maven specific settings
mvnw text eol=lf
.mvn/wrapper/maven-wrapper.properties text eol=lf

# IntelliJ IDEA specific settings
*.iml text eol=crlf
*.ipr text eol=crlf
*.iws text eol=crlf
.idea/* text eol=crlf